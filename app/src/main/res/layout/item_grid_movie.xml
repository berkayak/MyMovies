<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="4dp"
    android:paddingBottom="4dp"
    android:paddingTop="4dp"
    android:background="@drawable/radius_movie_grid">

    <ImageView
        android:id="@+id/ivMovieCover"
        android:layout_width="120dp"
        android:layout_height="180dp"
        tools:src="@drawable/movie_placeholder"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvMovieTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/MovieTitleTextView"
        tools:text="Spiderman 3: Back to Home"
        app:layout_constraintTop_toBottomOf="@id/ivMovieCover"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>